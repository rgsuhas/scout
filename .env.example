# AI Roadmap Service Configuration

# Service Settings
SERVICE_NAME=ai-roadmap-service
SERVICE_VERSION=1.0.0
PORT=8003
ENVIRONMENT=development
LOG_LEVEL=info

# AI Provider Configuration
AI_PROVIDER=openai  # Options: openai, anthropic, google, ollama, huggingface

# OpenAI Configuration (if using openai provider)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_BASE_URL=  # Optional: for Azure OpenAI or custom endpoints

# Anthropic Configuration (if using anthropic provider)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Google Configuration (if using google provider)
GOOGLE_API_KEY=your-google-api-key-here
GOOGLE_MODEL=gemini-pro

# Ollama Configuration (if using ollama provider - local models)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Hugging Face Configuration (if using huggingface provider)
HUGGINGFACE_API_KEY=your-hf-api-key-here
HUGGINGFACE_MODEL=microsoft/DialoGPT-medium

# Common AI Parameters
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.7
AI_TIMEOUT=30

# Service URLs
AUTH_SERVICE_URL=http://localhost:8001
PROFILE_SERVICE_URL=http://localhost:8002
FRONTEND_URL=http://localhost:3000

# Database (if using)
DATABASE_URL=sqlite:///./roadmaps.db

# Redis Cache
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Security
JWT_SECRET=your-jwt-secret-here
API_KEY=your-internal-api-key

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Development Settings
DEBUG=false
RELOAD=true